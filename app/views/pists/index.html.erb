<p id="notice"><%= notice %></p>

<h1>Pists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pists.each do |pist| %>
      <tr>
        <td><%= pist.title %></td>
        <td><%= pist.content %></td>
        <td><%= pist.user %></td>
        <td><%= link_to 'Show', pist %></td>
        <td><%= link_to 'Edit', edit_pist_path(pist) %></td>
        <td><%= link_to 'Destroy', pist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pist', new_pist_path %>
